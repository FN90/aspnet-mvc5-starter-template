@using App.UI.Mvc5.Areas.Users

@model EmptyPartialViewModel

<!-- Page Contents -->

@if (!Request.IsAuthenticated)
{
	<div class="d-flex flex-row-reverse align-items-center">
		<a class="btn btn-outline-dark" href="@Url.Action("LogIn", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">
			@(GetLocalizedString<AreaResources>("LogIn"))
		</a>
		<nav class="my-2 my-md-0 mr-md-3">
			<a class="p-2 text-dark" href="@Url.Action("SignUp", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">
				@(GetLocalizedString<AreaResources>("SignUp"))
			</a>
		</nav>
	</div>
	@*
		<ul class="navbar-nav ml-auto">

			<li class="nav-item">
				<a class="nav-link text-info" href="@Url.Action("LogIn", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">
					@(GetLocalizedString<AreaResources>("LogIn"))
				</a>
			</li>

			<li class="navbar-text">or</li>

			<li class="nav-item">
				<a class="nav-link text-info" href="@Url.Action("SignUp", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">
					@(GetLocalizedString<AreaResources>("SignUp"))
				</a>
			</li>

		</ul>
	*@
}
else
{
	<ul class="navbar-nav ml-auto">
		@if (!User.EmailConfirmed)
		{
			<li class="nav-item">
				<a href="@Url.Action("VerifyEmail", "Account", new { area = AppAreas.GetAreaName(Area.Users) })" class="nav-link" data-toggle="tooltip" data-placement="bottom" title="@(GetLocalizedString<AreaResources>("EmailVerificationAlertMessage"))">
					<i class="fa fa-exclamation-circle text-warning"></i>
				</a>
			</li>
		}
		@if (User.IsInRole(Role.SuperUser))
		{
			<li class="nav-item">
				<a href="@Url.Action("Index", "_Landing", new { area = AppAreas.GetAreaName(Area.Management) })" class="nav-link @Menu.IfActiveItem("management.area", "active", string.Empty)" data-toggle="tooltip" data-placement="bottom" title="@(GetLocalizedString<AreaResources>("Management"))">
					<i class="fa fa-cogs text-info"></i>
				</a>
			</li>
		}
	</ul>

	<ul class="navbar-nav">
		<li class="nav-item user-picture dropdown">

			<a class="nav-link dropdown-toggle @Menu.IfActiveItem("users.area", "active", string.Empty)" id="userMemuItems" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				<img src="@Url.BlobThumbnail(User.PictureBlobName, User.UserName, width: 35, height: 35)" class="img-fluid rounded-circle">
			</a>

			<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMemuItems" style="position: absolute;">

				<a class="dropdown-item" href="@Url.Action("Edit", "Profile", new { area = AppAreas.GetAreaName(Area.Users) })">
					<i class="fa fa-user mr-3"></i>@GetLocalizedString("EditProfile")
				</a>

				<a class="dropdown-item" href="@Url.Action("PasswordChange", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">
					<i class="fa fa-lock mr-3"></i>@GetLocalizedString("ChangePassword")
				</a>

				<div role="separator" class="dropdown-divider"></div>

				<a class="dropdown-item" href="@Url.Action("LogOff", "Account", new { area = AppAreas.GetAreaName(Area.Users) })">
					<i class="fa fa-power-off mr-3"></i>@GetLocalizedString("LogOff")
				</a>

			</div>
		</li>
	</ul>
}
